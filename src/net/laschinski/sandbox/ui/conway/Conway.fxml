<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.laschinski.sandbox.ui.conway.ConwayController">
   <children>
      <Canvas fx:id="canvas" height="502.0" layoutY="53.0" onMouseClicked="#drawCellsWithMouse" onMouseDragged="#drawCellsWithMouse" width="502.0" />
      <Button fx:id="startStopButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#startStopSimulation" text="Start simulation" />
      <Button layoutX="128.0" layoutY="14.0" mnemonicParsing="false" onAction="#trainANN" text="TrainANN" />
      <CheckBox fx:id="annCheckbox" layoutX="211.0" layoutY="18.0" mnemonicParsing="false" text="Use ANN" />
      <Button layoutX="420.0" layoutY="14.0" mnemonicParsing="false" onAction="#clearGrid" text="Clear grid" />
   </children>
</AnchorPane>
